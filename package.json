{
    "name": "@runnane/node-red-contrib-graphql",
    "version": "1.0.7",
    "description": "graphql for Node-RED ",
    "main": "index.js",
    "scripts": {
        "test": "mocha \"src/**/__tests__/*_spec.js\"",
        "test:jest": "jest --testPathIgnorePatterns integration --forceExit --detectOpenHandles",
        "test:integration": "jest --forceExit --detectOpenHandles"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/runnane/node-red-contrib-graphql.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "runnane",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/runnane/node-red-contrib-graphql/issues"
    },
    "homepage": "https://github.com/runnane/node-red-contrib-graphql#readme",
    "keywords": [
        "node-red",
        "graphql",
        "hasura"
    ],
    "dependencies": {
        "apollo-cache-inmemory": "^1.6.6",
        "apollo-client": "^2.6.10",
        "apollo-link": "^1.2.14",
        "apollo-link-http": "^1.5.17",
        "apollo-link-ws": "^1.0.20",
        "graphql": "^15.4.0",
        "graphql-tag": "^2.11.0",
        "node-fetch": "^2.6.1",
        "subscriptions-transport-ws": "^0.9.18",
        "ws": "^7.4.2"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "husky": "^4.0.10",
        "jest": "^29.7.0",
        "lint-staged": "^9.4.2",
        "mocha": "^8.2.1",
        "node-red": "^3.1.0",
        "node-red-node-test-helper": "^0.2.3"
    },
    "node-red": {
        "nodes": {
            "graphql-config": "src/nodes/config.js",
            "graphql-query": "src/nodes/query.js",
            "graphql-mutate": "src/nodes/mutate.js",
            "graphql-subscribe": "src/nodes/subscribe.js"
        }
    },
    "jest": {
        "testEnvironment": "node"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
